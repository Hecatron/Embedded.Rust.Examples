{
  "version": "2.0.0",
  "tasks": [

    // Build in debug mode
    {
      "label": "build debug",
      "command": "cargo",
      "type": "process",
      "group": "build",
      "args": [ "make", "build" ]
    },

    // Build in debug mode and upload to the board flash
    {
      "label": "build debug - flash upload",
      "command": "cargo",
      "type": "process",
      "group": "build",
      "args": [ "make", "flash-build" ]
    },

    // Build in release mode
    {
      "label": "build release",
      "command": "cargo",
      "type": "process",
      "group": "build",
      "args": [ "make", "build-release" ]
    },

    // Build in release mode and upload to the board flash
    {
      "label": "build release - flash upload",
      "command": "cargo",
      "type": "process",
      "group": "build",
      "args": [ "make", "flash-build-release" ]
    },

    // Clean the target build directory
    {
      "label": "clean",
      "command": "cargo",
      "type": "process",
      "group": "build",
      "args": [ "make", "clean" ],
    },

    // This gets the ESP32 Flash id and displays it in the console
    // It can also be used to reset the device
    {
      "label": "esp32 get flashid",
      "command": "cargo",
      "type": "process",
      "args": [ "make", "esp32-flashid" ],
    },

    // Erase the flash
    {
      "label": "esp32 erase flash",
      "command": "cargo",
      "type": "process",
      "args": [ "make", "esp32-eraseflash" ],
    },
  ],
}
