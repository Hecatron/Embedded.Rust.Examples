{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug: cortex-debug",
            "cwd": "${workspaceRoot}",
            "executable": "target/xtensa-esp32-none-elf/debug/blinky",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "openocd",
            "interface": "jtag",
            "svdFile": "gdb/svd/esp32.svd",
            "serverpath": "C:\\Apps\\openocd-esp32\\bin\\openocd.exe",
            "toolchainPrefix": "C:\\Apps\\xtensa-esp32-elf\\bin\\xtensa-esp32-elf",
            "configFiles": [
                "gdb/openocd-wrover-kit.cfg"
            ],
        },
        {
            "name": "debug: gdb attach debug",
            "type": "gdb",
            "request": "launch",
            "target": "target/xtensa-esp32-none-elf/debug/blinky",
            "gdbpath": "xtensa-esp32-elf-gdb",
            "cwd": "${workspaceRoot}",
            "autorun": [
                "source xtensa.gdb"
            ]
        },
        {
            "name": "debug: gdb attach release",
            "type": "gdb",
            "request": "launch",
            "target": "target/xtensa-esp32-none-elf/release/blinky",
            "gdbpath": "xtensa-esp32-elf-gdb",
            "cwd": "${workspaceRoot}",
            "autorun": [
                "source xtensa.gdb"
            ]
        },
    ]
}
